<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.FlowPane?>


<FlowPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.F1.driver.control.DriverController">
   <children>
      <Button mnemonicParsing="false" onAction="#add" prefHeight="25.0" prefWidth="130.0" text="Add" />
      <Button mnemonicParsing="false" onAction="#refillTable" prefHeight="25.0" prefWidth="159.0" text="Refresh" />
       <TableView fx:id="driverTable" editable="true" onKeyPressed="#onDelete" prefHeight="808.0" prefWidth="1023.0" tableMenuButtonVisible="true">
           <columns>
               <TableColumn fx:id="driverName" onEditCommit="#onEditDriverName" prefWidth="75.0" text="Name" />
               <TableColumn fx:id="driverNumber" onEditCommit="#onEditDriverNumber" prefWidth="181.0" text="Number" />
               <TableColumn fx:id="driverTeamName" onEditCommit="#onEditDriverTeamName" prefWidth="172.0" text="Team Name" />
               <TableColumn fx:id="driverPoints" editable="false" prefWidth="75.0" text="Points" />
           </columns>
           <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
           </columnResizePolicy>
           <opaqueInsets>
            <Insets />
           </opaqueInsets>
       </TableView>
   </children>
</FlowPane>
