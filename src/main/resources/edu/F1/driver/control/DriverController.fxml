<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.F1.driver.control.DriverController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <TableView fx:id="driverTable" editable="true">
        <columns>
            <TableColumn fx:id="driverName" prefWidth="75.0" text="Name" />
            <TableColumn fx:id="driverNumber" prefWidth="75.0" text="Number" />
            <TableColumn fx:id="driverTeamName" prefWidth="75.0" text="Team Name" />
            <TableColumn fx:id="driverPoints" prefWidth="75.0" text="Points" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <opaqueInsets>
         <Insets />
        </opaqueInsets>
    </TableView>
</GridPane>
